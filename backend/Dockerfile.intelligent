FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi==0.108.0 \
    uvicorn[standard]==0.25.0 \
    pydantic==2.5.0 \
    pydantic-settings==2.1.0 \
    python-dotenv==1.0.0 \
    loguru==0.7.2 \
    python-multipart

# Copy server file
COPY intelligent_server.py .

# Expose port
EXPOSE 8000

# Run server
CMD ["python", "intelligent_server.py"]

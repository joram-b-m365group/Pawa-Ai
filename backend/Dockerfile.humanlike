FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi==0.108.0 \
    uvicorn[standard]==0.25.0 \
    pydantic==2.5.0 \
    python-dotenv==1.0.0 \
    python-multipart

# Optional AI libraries (will gracefully fall back if not available)
RUN pip install --no-cache-dir anthropic openai || true

# Copy server
COPY human_like_ai.py .
COPY .env.intelligence .env

EXPOSE 8000

CMD ["python", "human_like_ai.py"]

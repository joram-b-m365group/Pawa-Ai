FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi==0.108.0 \
    uvicorn[standard]==0.25.0 \
    pydantic==2.5.0 \
    python-dotenv==1.0.0 \
    python-multipart \
    requests

# Copy server
COPY local_ai_server.py .

EXPOSE 8000

CMD ["python", "local_ai_server.py"]

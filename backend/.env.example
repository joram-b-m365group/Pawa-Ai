# Application Settings
APP_NAME=Genius AI
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/genius_ai
REDIS_URL=redis://localhost:6379

# Vector Database
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=genius_knowledge

# Model Configuration
BASE_MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.2
# Alternative: meta-llama/Llama-2-7b-chat-hf
MODEL_CACHE_DIR=./models/cache
DEVICE=cuda
# Options: cuda, mps, cpu

# Fine-tuning
USE_LORA=true
LORA_R=8
LORA_ALPHA=16
LORA_DROPOUT=0.1

# Memory Settings
MAX_CONVERSATION_HISTORY=50
MEMORY_WINDOW_SIZE=4096
ENABLE_LONG_TERM_MEMORY=true

# RAG Settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RESULTS=5

# Agent Settings
MAX_AGENT_ITERATIONS=10
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=2048

# External APIs (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Monitoring
ENABLE_TELEMETRY=true
METRICS_PORT=9090
